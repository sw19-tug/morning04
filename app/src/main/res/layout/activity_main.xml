<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <Button
            android:text="InputView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task1" android:onClick="launchInputView" />
    <Button
            android:text="LearningView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task2" android:onClick="launchLearningView" />
    <Button
            android:text="SearchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task3" android:onClick="launchSearchView" />
    <Button
            android:text="RatingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task4" android:onClick="launchRatingView" />
    <Button
            android:text="TestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task5" android:onClick="launchTestView" />
    <Button
            android:text="ADVView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task6" android:onClick="launchADVView" />
    <Button
            android:text="SaveTestView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task7" android:onClick="launchSaveTestView" />
    <Button
            android:text="BackupView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task8" android:onClick="launchBackupView" />
    <Button
            android:text="SharingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/task9" android:onClick="launchSharingView" />

</LinearLayout>